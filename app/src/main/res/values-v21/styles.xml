        <item name="android:colorAccent">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="AppTheme.MainMenu" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorAccent">@color/colorAccent</item>
        <item name="android:colorPrimaryDark">@color/colorAccent</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/background_light</item>
        <item name="android:colorForeground">@android:color/background_light</item>
        <item name="android:colorPrimary">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.Video" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@android:color/background_dark</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@android:color/black</item>
